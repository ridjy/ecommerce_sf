{% extends 'base.html.twig' %}

{% block title %}Mise à jour utilisateur{% endblock %}

{% block body %}

<!--Main layout-->
  <main class="mt-5 pt-4">
    <div class="container wow fadeIn">

      <!-- Heading -->
      <h2 class="my-5 h2 text-center">Mise à jour des informations de l'utilisateur</h2>

      <!--Grid row-->
      <div class="row">

        <!--Grid column-->
        <div class="col-md-8 mb-4">

          <!--Card-->
          <div class="card">

            <!--Card content-->
            {{ form_start(form, {'attr': {'id': 'new_edit_user'}}) }}

              <!--Grid row-->
              <div class="row">

                <!--Grid column-->
                <div class="col-md-6 mb-2">

                  <!--firstName-->
                  <div class="md-form ">
                    {{ form_widget(form.username) }}
                    <label for="firstName" class="">Username</label>
                  </div>

                </div>
                <!--Grid column-->

                <!--Grid column-->
                <div class="col-md-6 mb-2">

                  <!--lastName-->
                  <div class="md-form">
                    <input type="text" id="lastName" class="form-control" name="prenom">
                    <label for="lastName" class="">Prénom</label>
                  </div>

                </div>
                <!--Grid column-->

              </div>
              <!--Grid row-->

              <!--email-->
              <div class="md-form mb-5">
                <input type="text" id="email" class="form-control" placeholder="youremail@example.com" name="email">
                {{ form_widget(form.email) }}
              </div>

              <!--address-->
              <div class="md-form mb-5">
                <input type="text" id="address" class="form-control" placeholder="1234 Main St" name="adresse">
                <label for="address" class="">Addresse (optionnel)</label>
              </div>

              <hr>

              <!--address-->
              <div class="md-form mb-5">
                <input id="password2" type="Password" placeholder="Confirmer mot de passe" name="password2" required="">
                {{ form_label(form.email) }}
              </div>


              <hr>
              <button class="btn btn-success">{{ button_label|default('Mettre à jour') }}</button>
        {{ form_end(form) }}

          </div>
          <!--/.Card-->

        </div>
        <!--Grid column-->

        <!--Grid column-->
        <div class="col-md-4 mb-4">
            <a href="{{ path('app_user_index') }}">back to list</a>

            {{ include('user/_delete_form.html.twig') }}
        </div>
        <!--Grid column-->

      </div>
      <!--Grid row-->

    </div>
  </main>
  <!--Main layout-->


    

</div>
</main>
{% endblock %}

{% block javascripts %}
<script
    src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
    crossorigin="anonymous">
</script>
<script>
    $("#new_edit_user").on('submit', function(){
        if($("#user_password").val() != $("#password2").val()) {
            //implémntez votre code
            alert("Les deux mots de passe saisies sont différents");
            return false;
        }
    })
</script>
{% endblock %}
