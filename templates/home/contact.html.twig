{% extends 'base.html.twig' %}

{% block title %}{{ parent() }}  | Contact {% endblock %}

{% block body %}

  <!--Main layout-->
  <main class="mt-5 pt-4">
    <div class="container wow fadeIn">

      <!-- Heading -->
      <h2 class="my-5 h2 text-center">Formulaire de contact</h2>

      <!--Grid row-->
      <div class="row">

        <!--Grid column-->
        <div class="col-md-8 mb-4">

          <!--Card-->
          <div class="card">

            <!--Card content-->
            <form class="card-body" method="POST" action="{{path('app_contact_send')}}">

              <!--Grid row-->
              <div class="row">

                <!--Grid column-->
                <div class="col-md-6 mb-2">

                  <!--firstName-->
                  <div class="md-form ">
                    <input type="text" id="firstName" class="form-control" name="nom">
                    <label for="firstName" class="">Nom</label>
                  </div>

                </div>
                <!--Grid column-->

                <!--Grid column-->
                <div class="col-md-6 mb-2">

                  <!--lastName-->
                  <div class="md-form">
                    <input type="text" id="lastName" class="form-control" name="prenom">
                    <label for="lastName" class="">Prénom</label>
                  </div>

                </div>
                <!--Grid column-->

              </div>
              <!--Grid row-->

              <!--email-->
              <div class="md-form mb-5">
                <input type="text" id="email" class="form-control" placeholder="youremail@example.com" name="email">
                <label for="email" class="">Email</label>
              </div>

              <!--address-->
              <div class="md-form mb-5">
                <input type="text" id="address" class="form-control" placeholder="1234 Main St" name="adresse">
                <label for="address" class="">Addresse (optionnel)</label>
              </div>

              <hr>

              <!--address-->
              <div class="md-form mb-5">
                <textarea id="message" class="form-control" placeholder="Votre message" rows="4" name="message"></textarea>
              </div>

              <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="same-address" name="newsletter" value='abonne'>
                <label class="custom-control-label" for="same-address">S'abonner à la newsletter</label>
              </div>

            {% for message in app.flashes('success') %}
            <div class="md-form mb-5">
                <div class="alert alert-success">
                    {{ message }}
                </div>
            </div>
            {% endfor %}

              <hr>
              <button class="btn btn-primary btn-lg btn-block" type="submit">Envoyer mon message</button>

            </form>

          </div>
          <!--/.Card-->

        </div>
        <!--Grid column-->

        <!--Grid column-->
        <div class="col-md-4 mb-4">

          <!-- Heading -->
          <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Votre commercial attitré</span>
            <span class="badge badge-secondary badge-pill">!</span>
          </h4>

          <!-- Cart -->
          <ul class="list-group mb-3 z-depth-1">
            <li class="list-group-item d-flex justify-content-between lh-condensed">
              <div>
                <h6 class="my-0">Nom</h6>
                <small class="text-muted">Eddy Rijanavalona</small>
              </div>
              <span class="text-muted"></span>
            </li>
            <li class="list-group-item d-flex justify-content-between lh-condensed">
              <div>
                <h6 class="my-0">Adresse mail</h6>
                <small class="text-muted">rijanavalona.rakotomalala@gmail.com</small>
              </div>
              <span class="text-muted">!</span>
            </li>
            <li class="list-group-item d-flex justify-content-between lh-condensed">
              <div>
                <h6 class="my-0">Adresse</h6>
                <small class="text-muted">Paris 16e</small>
              </div>
              <span class="text-muted">!</span>
            </li>
            <li class="list-group-item d-flex justify-content-between bg-light">
              <div class="text-success">
                <h6 class="my-0">Téléphone</h6>
                <small>+3306001022</small>
              </div>
              <span class="text-success"></span>
            </li>
            <li class="list-group-item d-flex justify-content-between">
              <span>Merci</span>
              <strong>*</strong>
            </li>
          </ul>
          <!-- Cart -->

          <!-- Promo code -->
          <form class="card p-2">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Promo code" aria-label="Recipient's username" aria-describedby="basic-addon2">
              <div class="input-group-append">
                <button class="btn btn-secondary btn-md waves-effect m-0" type="button">Réclamer</button>
              </div>
            </div>
          </form>
          <!-- Promo code -->

        </div>
        <!--Grid column-->

      </div>
      <!--Grid row-->

    </div>
  </main>
  <!--Main layout-->
{% endblock %}